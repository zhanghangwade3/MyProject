<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="添加银行卡"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Title" />

        <TextView
            android:id="@+id/tv_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除"
            android:textColor="@color/app_white"
            android:textSize="@dimen/size_Desc" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textSize="@dimen/size_Desc"
         android:textColor="@color/big_red"
        />

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_ti"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户名"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入开户名"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_hang"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户银行"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请选择开户银行"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_bg" />

    <RelativeLayout
        android:id="@+id/hang_addres"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户银行"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/hang_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_toRightOf="@+id/tv"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请选择开户银行"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/nexta" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_hang"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户银行所在地"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/et_kaihuhang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_right2"
            android:layout_toRightOf="@+id/adress"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请选择开户银行所在地"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <ImageView
            android:id="@+id/iv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/nexta" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <LinearLayout
        android:id="@+id/ll_zhi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_name"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户行支行名称"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/zhi_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入开户行支行名称"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <LinearLayout
        android:id="@+id/hang_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_zhi"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="银行卡号"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />
        <EditText
            android:id="@+id/hang_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:digits="0123456789"
            android:hint="请输入银行卡号"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/hang_number"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="再一次输入银行卡号"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/et_zai_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:inputType="number"
            android:digits="0123456789"
            android:gravity="right|center_vertical"
            android:hint="请再一次输入银行卡号"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <Button
        android:id="@+id/bt_queren_tianjia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_baojia"
        android:gravity="center"
        android:text="确定添加"
        android:textColor="@color/app_white"
        android:textSize="16sp" />

</RelativeLayout>
