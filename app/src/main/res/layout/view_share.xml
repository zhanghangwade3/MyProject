<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_view_bg"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="15dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="微信"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="微信朋友圈"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weibo"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="新浪微博"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="QQ好友"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_qzone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_qzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="QQ空间"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="QQ好友"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Small" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>