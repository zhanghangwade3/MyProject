<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="添加支付宝"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Title" />

        <TextView
            android:id="@+id/tv_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除"
            android:textColor="@color/app_white"
            android:textSize="@dimen/size_Desc" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ti"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/re_title"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="@dimen/size_Desc"

        />
    <TextView
        android:id="@+id/tv_ti2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ti"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="请绑定本人支付宝账号"
        android:textSize="@dimen/size_Desc"
        android:textColor="@color/big_red"
        />
    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_ti2"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="支付宝账户"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/bao_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入支付宝账户"
            android:inputType="number"
            android:maxLength="19"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_hang"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="开户银行"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请选择开户银行"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_bg" />

    <RelativeLayout
        android:id="@+id/hang_addres"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="确认支付宝账号"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/bao_number2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请确认支付宝账号"
            android:inputType="number"
            android:maxLength="19"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/niname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="0.5dp"

        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="支付宝昵称"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/et_ni_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入支付宝昵称"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/niname"
        android:layout_marginTop="0.5dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="支付宝姓名"
            android:textColor="@color/item_content"
            android:textSize="@dimen/size_Desc" />

        <EditText
            android:id="@+id/et_zai_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入支付宝姓名"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <Button
        android:id="@+id/bt_queren_tianjia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_baojia"
        android:gravity="center"
        android:text="确定添加"
        android:textColor="@color/app_white"
        android:textSize="16sp" />

</RelativeLayout>
