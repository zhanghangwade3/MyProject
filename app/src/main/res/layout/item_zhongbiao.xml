<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <RelativeLayout
        android:id="@+id/re_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xiaotu" />

        <LinearLayout
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="实木床配送安装"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Content" />

                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="任务编号："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="4256365"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="家具品类："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_jiaju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="办公家具"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="服务类型："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="安装"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_addre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:background="@color/app_white"
                    android:text="西安市长安区"
                    android:padding="2dp"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc"
                    android:lines="2"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/nexta"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:id="@+id/vi3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_content"
        android:background="@color/app_bg"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/vi3"

        >
        <TextView
            android:id="@+id/other_ok"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_bao"
            android:background="@drawable/btn_zhong_bg"
            android:gravity="center"
            android:text="确认接单"
            android:textColor="@color/app_white"
            android:textSize="@dimen/size_Small" />
        <TextView
            android:id="@+id/other_cancle"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/other_ok"
            android:background="@drawable/btn_cancel_bg"
            android:gravity="center"
            android:text="取消接单"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Small" />
      <ImageView
          android:id="@+id/iv_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/shijian"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          />
        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_date"
            android:gravity="center"
            android:text="中标时间:"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_time2"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="2017年4月6号"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

    </RelativeLayout>

</RelativeLayout>