<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dabeijing"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_round_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rl_username_del"
                android:background="@null"
                android:drawableLeft="@drawable/name"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:hint="请输入手机号码"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="11"
                android:padding="10dp"
                android:textColor="@color/item_title"
                android:textColorHint="@color/item_desc"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_username_del"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imagec"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/mshanchu"
                    android:visibility="visible" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/yanzhnegma"
                android:layout_toLeftOf="@+id/rl_password_del"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:layout_centerVertical="true"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="10dp"
                android:textColor="@color/item_title"
                android:textColorHint="@color/item_desc"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_password_del"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imagec2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/mshanchu"
                    android:visibility="visible" />

            </RelativeLayout>

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="找回密码"
                 android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/app_white"

                ></View>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="注册账号"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_white"
                android:textSize="14sp" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_confrim_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="登录"
            android:textColor="@color/app_white"
            android:textSize="@dimen/size_Title" />
    </LinearLayout>

      <com.all.app.utils.CircularImage
          android:id="@+id/iv_tou"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
           android:layout_marginTop="80dp"
          android:scaleType="centerCrop"
          android:src="@drawable/toubai"

          />
</RelativeLayout>