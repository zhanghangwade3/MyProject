<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <RelativeLayout
        android:id="@+id/re_xiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/xiaotu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_content"
            android:layout_toRightOf="@+id/iv_head">

            <RelativeLayout
                android:id="@+id/re_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万工123456"
                    android:textColor="@color/item_title"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

               <TextView
                   android:id="@+id/tv_ping"
                   android:layout_width="35dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/shape_edit_ping"
                   android:text="好评"
                   android:gravity="center"
                   android:textColor="@color/app_white"
                   android:textSize="@dimen/size_Desc"
                   android:layout_toRightOf="@+id/tv_number"
                   android:layout_marginLeft="5dp"
                   />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re_name"
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京朝阳区城市创建地产"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_point"
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务很好，谢谢"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_time"
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作速度"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_content6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_type"
                    android:layout_marginLeft="5dp"
                    android:text="5分"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/tv_content6"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv2"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv3"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv4"
                    android:src="@drawable/ratingbar_icon_normal" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_qulity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_service"
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_qulity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作质量"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_conten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_qulity"
                    android:layout_marginLeft="5dp"
                    android:text="5分"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />
                <ImageView
                    android:id="@+id/iv11"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/tv_conten"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv21"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv11"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv31"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv21"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv41"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv31"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv51"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv41"
                    android:src="@drawable/ratingbar_icon_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_taidu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_qulity"
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_taidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作速度"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_conte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_taidu"
                    android:layout_marginLeft="5dp"
                    android:text="5分"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />
                <ImageView
                    android:id="@+id/iv61"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/tv_conte"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv12"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv61"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv13"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv12"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv14"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv13"
                    android:src="@drawable/ratingbar_icon_normal" />

                <ImageView
                    android:id="@+id/iv15"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv14"
                    android:src="@drawable/ratingbar_icon_normal" />
            </RelativeLayout>






        </RelativeLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/re_xiang"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/app_bg"
        >
    </View>

</RelativeLayout>