            <RelativeLayout
                android:id="@+id/re_cang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/app_white"
                >

                <TextView
                    android:id="@+id/tv_cang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_approve"
                    android:background="@color/app_white"
                    android:text="仓储服务"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />


                <TextView
                    android:id="@+id/type_cang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_cang"
                    android:background="@color/app_white"
                    android:text=""
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />


                <ImageView
                    android:id="@+id/iv_right7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/nexta" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/app_bg"></View>
            <LinearLayout
                android:id="@+id/re_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="服务承诺"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <com.all.app.utils.ContainsEmojiEditText
                    android:id="@+id/edt_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:hint="请输入您的服务承诺"
                    android:lines="5"
                    android:maxLength="300"
                    android:padding="5dip"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/app_bg"></View>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_baocun"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_baojia"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/app_white"
        android:textSize="@dimen/size_Content"/>

</RelativeLayout>
