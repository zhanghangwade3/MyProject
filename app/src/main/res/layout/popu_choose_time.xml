<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Content" />

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical" >

        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="160dip"
	        android:orientation="horizontal"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:gravity="center_vertical">
	        <com.all.app.utils.views.WheelView
	            android:id="@+id/wv_birth_year"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            />
			<TextView
				android:id="@+id/tv_year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="@color/app_white"
				android:text="年"
				android:textColor="@color/item_content"
				android:textSize="@dimen/size_Content" />
	         <com.all.app.utils.views.WheelView
	            android:id="@+id/wv_birth_month"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            />
			<TextView
				android:id="@+id/tv_mony"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="@color/app_white"
				android:text="月"
				android:textColor="@color/item_content"
				android:textSize="@dimen/size_Content" />
	         <com.all.app.utils.views.WheelView
	            android:id="@+id/wv_birth_day"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            />
			<TextView
				android:id="@+id/tv_day"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="@color/app_white"
				android:text="日"
				android:textColor="@color/item_content"
				android:textSize="@dimen/size_Content" />
	    </LinearLayout>
    </LinearLayout>

</LinearLayout>