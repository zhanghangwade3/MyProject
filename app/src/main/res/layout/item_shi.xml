<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <RelativeLayout
        android:id="@+id/re_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/xiaotu" />

        <LinearLayout
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="实木床配送安装"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_title"
                    android:textSize="@dimen/size_Content" />

                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="任务编号："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="4256365"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="家具品类："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_jiaju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="办公家具"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:padding="2dp"
                    android:text="服务类型："
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:text="安装"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"

                >

                <TextView
                    android:id="@+id/tv_addre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:padding="2dp"
                    android:background="@color/app_white"
                    android:text="西安市长安区"
                    android:textColor="@color/item_desc"
                    android:textSize="@dimen/size_Desc"
                    android:lines="2"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/nexta" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_shi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_content"
        android:paddingBottom="5dp"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_centerVertical="true"
            android:src="@drawable/biao"
            android:paddingBottom="3dp"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="5dip"
           android:layout_toLeftOf="@+id/tv_minut"
            android:gravity="center_vertical"
            android:text="剩余时间:"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />


        <TextView
            android:id="@+id/tv_minut"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:text="60分"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />

    </RelativeLayout>
    <View
        android:id="@+id/vi3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/re_shi"
        android:background="@color/app_bg"></View>
</RelativeLayout>