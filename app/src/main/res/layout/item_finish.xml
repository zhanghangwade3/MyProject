<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <RelativeLayout
        android:id="@+id/re_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_head"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州办公家具安装"
            android:layout_centerVertical="true"
            android:textColor="@color/item_title"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_number"
            android:text="123555"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_num"
            android:text="2017/04/16"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/nexta" />

    </RelativeLayout>

    <View
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_name"
        android:background="@color/app_bg" />


    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作速度"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_content6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_type"
            android:text="5"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_content8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_content6"
            android:text="分"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_content8"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv1"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv2"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv3"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv4"
            android:src="@drawable/ratingbar_icon_normal" />

        <TextView
            android:id="@+id/tv_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="好"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qulity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_service"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_qulity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作质量"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_conten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_qulity"
            android:text="5"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />
        <TextView
            android:id="@+id/tv_content9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_conten"
            android:text="分"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />
        <ImageView
            android:id="@+id/iv11"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_content9"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv11"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv31"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv21"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv41"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv31"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv51"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv41"
            android:src="@drawable/ratingbar_icon_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_taidu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_qulity"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_taidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作态度"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_conte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_taidu"
            android:text="5"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc" />
        <TextView
            android:id="@+id/tv_content11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_conte"
            android:text="分"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />
        <ImageView
            android:id="@+id/iv61"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_content11"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv12"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv61"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv13"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv12"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv14"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv13"
            android:src="@drawable/ratingbar_icon_normal" />

        <ImageView
            android:id="@+id/iv15"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/iv14"
            android:src="@drawable/ratingbar_icon_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_taidu"
        android:layout_marginLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="3dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述："
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />
        <TextView
            android:id="@+id/tv_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_time"
            android:text="服务很好，谢谢"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />
    </RelativeLayout>
    <View
        android:id="@+id/iv_fenge"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/rl_time"
        android:background="@color/app_bg" />


</RelativeLayout>