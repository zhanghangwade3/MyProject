<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_white"
    >

   <CheckBox
       android:id="@+id/ck_value"
       android:layout_width="120dp"
       android:layout_height="35dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="5dp"
       android:button="@null"
       android:clickable="false"
       android:checked="false"
       android:gravity="center"
       android:text="暂无"
       android:background="@drawable/shape_register_bg"
       android:textColor="@color/item_content"
       android:textSize="@dimen/size_Desc"
       />
   <ImageView
       android:id="@+id/iv_pei"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/ck_value"
       android:layout_alignBottom="@+id/ck_value"
       android:scaleType="centerCrop"
       android:src="@drawable/quan"
       android:visibility="invisible"
       />

</RelativeLayout>