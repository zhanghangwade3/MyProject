<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >

    <LinearLayout
        android:id="@+id/pay_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edittext_bg_nor"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pay_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/pay_title"
            android:textColor="#404040"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1dfdf" />

        <com.all.app.utils.PwdEditText
            android:id="@+id/pet_pwd"
            android:layout_width="340dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:focusable="true"
            android:background="@color/app_bg"
            android:cursorVisible="false"
            android:maxLength="6"
            android:enabled="true"
            android:inputType="number"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_baojia"
                android:gravity="center"
                android:text="@string/pay_cancel"
                android:textColor="@color/app_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pay_sure"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_que"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/app_white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>