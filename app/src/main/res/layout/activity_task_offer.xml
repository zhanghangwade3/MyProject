<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="任务报价"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Title" />

    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_title"
        android:background="@color/app_bg" />


    <RelativeLayout
        android:id="@+id/re_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_news1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="杭州家具安装"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Content" />

    </RelativeLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_price"
        android:background="@color/app_bg" />

    <RelativeLayout
        android:id="@+id/re_price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_price"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_news2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="工作周期:"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Content" />

        <com.all.app.utils.ContainsEmojiEditText
            android:id="@+id/et_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_news2"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="请输入工作周期"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/et_time"
            android:gravity="center"
            android:text="天"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Content" />

    </RelativeLayout>

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_price2"
        android:background="@color/app_bg" />

    <LinearLayout
        android:id="@+id/shuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.all.app.utils.ContainsEmojiEditText
                android:id="@+id/et_an"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/person"
                android:layout_weight="1"
                android:background="@drawable/shape_fujian"
                android:cursorVisible="false"
                android:digits="0.123456789"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="18"
                android:singleLine="true"

                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Desc" />


            <com.all.app.utils.ContainsEmojiEditText
                android:id="@+id/et_yun"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_fujian"
                android:cursorVisible="false"
                android:digits="0.123456789"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="18"
                android:singleLine="true"

                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Desc" />

            <com.all.app.utils.ContainsEmojiEditText
                android:id="@+id/et_yun2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_fujian"
                android:cursorVisible="false"
                android:digits="0.123456789"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Desc" />

            <com.all.app.utils.ContainsEmojiEditText
                android:id="@+id/et_other"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_fujian"
                android:cursorVisible="false"
                android:digits="0.123456789"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/item_title"
                android:textSize="@dimen/size_Desc" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/he"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shuru"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_anp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:gravity="center"
            android:text="安装费"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />


        <TextView
            android:id="@+id/tv_yunp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="运输费"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/tv_yun2p"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"

            android:layout_weight="1"
            android:gravity="center"
            android:text="搬运费"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />

        <TextView
            android:id="@+id/otherp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="其它"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/he"
        android:background="@color/app_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:text="报价默认已含10%平台服务费，中标后，必须按时完工！"
            android:textColor="@color/big_red"
            android:textSize="@dimen/size_Small" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/re_he"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shuru"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_zhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_price"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="合计报价:"
            android:textColor="@color/item_title"
            android:textSize="@dimen/size_Desc" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/tv_danwei"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/APP_EC801B"
            android:textSize="@dimen/size_Desc"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="元"
            android:textColor="@color/item_desc"
            android:textSize="@dimen/size_Desc" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_miaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_he"
        android:gravity="center"
        android:padding="15dp"
        android:text="描述"
        android:textColor="@color/item_content"
        android:textSize="@dimen/size_Content" />

    <com.all.app.utils.ContainsEmojiEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/btn_text_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:cursorVisible="false"
        android:gravity="left"
        android:hint="请输入您的报价描述"
        android:maxLength="100"
        android:textColor="@color/item_desc"
        android:textSize="@dimen/size_Desc"
        android:layout_below="@+id/tv_miaoshu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_baojia"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/app_white" />


</RelativeLayout>
